extends layout.pug 


block content 

    if nameerror 
        p.error Please, enter a valid name 
    if levelerror 
        p.error Please, choose level
    if facultyerror 
        p.error Please, choose faculty
    if feedbackerror 
        p.error Please, write feedback
    

    .container

    form.form(action="/recording" method='POST') 
        h2.text-center.my-3 Create New Record
        label(for="") Name*
        input.input(type="text" name='name', placeholder="Enter your name")

        label(for="") Choose your Level*
        select.input(type="select" name="level")
            option(value="")
            option(value="level 3")  Level 3
            option(value="level 4")  Level 4
            option(value="level 5")  Level 5 
            option(value="level 6")  Level 6

        label(for="") Choose your Faculty*
        select.input(type="select" name="faculty")
            option(value="")
            option(value="Economics")  Economics 
            option(value="Business Management")  Business Management
            option(value="Finance")  Finance 
            option(value="Business Information Systems")  Business Information Systems 
            option(value="Commercial law")  Commercial Law 
            option(value="CIFS")  CIFS           
        if facultyError 
                    small.text-danger #{ facultyError }
        div.form-group.mb-3
                label(for="feedback") Feedback*
                textarea#feedback.form-control(name="feedback", cols="20", rows="6",placeholder="Student feedback")
                if feedbackError 
                    small.text-danger #{ feedbackError }
        button.btn.btn-primary.alert-btn(type='submit') Record
