doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Student Record System
        link(rel="stylesheet", href="/static/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
        script(src="/static/scripts.js" defer) 
        
    body 
        header.Navbar
            h1
                a(href="/") Student Record System
            .nav-part
                nav.nav
                .btn-group 
                    button.btn.btn-outline-secondary.dropdown-toggle#dropdownMenuBtn(type="button" data-bs-toggle="dropdown" aria-expanded="false") Choose Level 
                    ul.dropdown-menu.dropdown-menu-end(aria-labelledby="dropdownMenuBtn")
                        li 
                            a.dropdown-item(href=`/`) All
                        li 
                            a.dropdown-item(href=`/?Level=0`) Level 3 
                        li 
                            a.dropdown-item(href=`/?Level=1`) Level 4
                        li 
                            a.dropdown-item(href=`/?Level=2`) Level 5
                        li 
                            a.dropdown-item(href=`/?Level=3`) Level 6
                .btn-group 
                    button.btn.btn-outline-secondary.dropdown-toggle#dropdownMenuBtn(type="button" data-bs-toggle="dropdown" aria-expanded="false") Choose Faculty 
                    ul.dropdown-menu.dropdown-menu-end(aria-labelledby="dropdownMenuBtn")
                        li 
                            a.dropdown-item(href=`/`) All
                        li 
                            a.dropdown-item(href=`/?faculty=0`) Economics 
                        li 
                            a.dropdown-item(href=`/?faculty=1`) Business Management
                        li 
                            a.dropdown-item(href=`/?faculty=2`) Finance 
                        li 
                            a.dropdown-item(href=`/?faculty=3`) Business Information Systems 
                        li 
                            a.dropdown-item(href=`/?faculty=4`) Commercial Law
                        li 
                            a.dropdown-item(href=`/?faculty=4`) CIFS 
                        
                    a.btn(href="/recording") New Record   


        block content

    footer 
        p “This web application was created to fulfill Web Technology module's requirements and does not represent an actual company or service” 
